{
	"project_path": "../DelphiMocks.dproj",
	"type": "Delphi",
	"sources": [
		"./*.json",
		"$native_project:sources$"
	],

	"title": "SprutCAM Tech $native_project:name$ package",
	"description": "SprutCAM Tech Delphi Mocks package",
	"authors": ["SprutCAM Tech"],
	"owners":  ["SprutCAM Tech"],
	"language": "en-US",
	"version": "1.0",
	"copyright": "Copyright SprutCAM Tech 2021-2023",

	"packages": [
		{
			"class": "Nuget",
			"id": "SprutCAMTech.$native_project:name$.x64",
			"variant_files": {
				"Release_x64": [ {
					"condition": "'$(Platform)' != 'x86'",
					"files": {
						"$project:output_bpl$/$native_project:name$.stbuildresult.json": "build",
						"$project:output_bpl$/$native_project:name$.bpl": "build",
						"$project:output_dcp$/$native_project:name$.dcp": "build/dcu",
						"$project:output_dcu$/*.dcu": "build/dcu/$native_project:name$",
						"$project:source_pas$": "build/dcu/$native_project:name$/src"
					}
				} ]
			}
		},
		{
			"class": "Nuget",
			"id": "SprutCAMTech.$native_project:name$.x32",
			"variant_files": {
				"Release_x32": [ {
					"condition": "'$(Platform)' == 'x86'",
					"files": {
						"$project:output_bpl$/$native_project:name$.stbuildresult.json": "build",
						"$project:output_bpl$/$native_project:name$.bpl": "build",
						"$project:output_dcp$/$native_project:name$.dcp": "build/dcu",
						"$project:output_dcu$/*.dcu": "build/dcu/$native_project:name$",
						"$project:source_pas$": "build/dcu/$native_project:name$/src"
					}
				} ]
			}
		}
	]
}
